{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Behave current file",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "args": [
                "${file}"
            ]
        },
        {
            "name": "Python: Behave @debug",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "-f",
                "formatter.snippetsformatter:SnippetsFormatter",
                "-t",
                "debug"
            ]
        },
        {
            "name": "Python: Behave workspace",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "-f",
                "formatter.snippetsformatter:SnippetsFormatter",
            ]
        },
    ]
}